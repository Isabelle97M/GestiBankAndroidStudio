    package="com.sip.gestibank">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Gestibank">
        <!--android:usesCleartextTraffic="true"-->
        <activity android:name=".AgentHome"></activity>
        <activity android:name=".CustomerHome" />
        <activity android:name=".CustomersList" />
        <activity android:name=".Login" />
        <activity android:name=".AddNewAgent" />
        <activity android:name=".AgentsList" />
        <activity android:name=".AdministratorHome" />
        <activity android:name=".CurrencyConverter" />
        <activity android:name=".AccountCreation" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>